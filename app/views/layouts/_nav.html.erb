<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href=<%=root_path%>>Gemfile Exchange</a>

     <ul class="nav">
      <li><%=link_to 'Applications', gemfiles_path%></li>
      <li><%=link_to 'Gems', gems_path%><li>
      <%if logged_in?%>
        <li><%=link_to 'Post a Gemfile', new_gemfile_path%></li>  
      <%end%>
    </ul>

    <%if logged_in?%>

    <ul class='nav pull-right'>
    <li>
      <div class="btn-group margin">  
      
        <!--The button -->
        <%= link_to '#', class: "btn btn-small dropdown-toggle", 'data-toggle' => 'dropdown' do %>
          <%=current_user.username%> <span class='caret'></span>
        <%end%>
      
        <ul class="dropdown-menu">
          <li>
            <%= link_to edit_user_path(current_user) do%>
              <i class='icon-pencil'></i> Edit profile 
            <%end%>
          </li>   

          <li>
            <%= link_to user_path(current_user) do%>
              <i class='icon-user'></i> Your apps 
            <%end%>
          </li>
          
         <li>
            <%= link_to logout_path do%>
              <i class='icon-circle-arrow-left'></i> Logout 
            <%end%>
          </li>
        </ul>  
      </div>
    </li> 

    <%else%>
      <ul class='nav pull-right'>  
        <li>
          <div><%= link_to 'Login', login_path, class: 'btn btn-small btn-primary margin'%></div>
        </li>
      </ul>      
      
      <ul class='nav pull-right'>  
        <li>
          <div><%= link_to 'Register', register_path, class: 'btn btn-small btn-success margin'%></div>
        </li>
      </ul>      
    <%end%>  
  </div>
</div>